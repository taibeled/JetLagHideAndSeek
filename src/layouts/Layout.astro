---
import { ToastContainer } from "react-toastify";

export interface Props {
    className?: string;
}

const { className } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@400;500;700;800;900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
        <meta name="generator" content={Astro.generator} />
        <title>Jet Lag The Game: Hide and Seek</title>
    </head>
    <body class={className}>
        <slot />
        <ToastContainer client:only />
    </body>
</html>

<style>
    @tailwind base;

    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    @layer base {
        html {
            @apply text-slate-50;
        }
    }
</style>
